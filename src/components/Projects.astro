---
import projectsData from '../data/projects.json';
import { ExternalLink, Tag } from 'lucide-react';
---

<section id="projects" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <h2 class="section-title">AI & Agentic Portfolio</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projectsData.map(project => (
        <div class="glass-card flex flex-col h-full group">
          <div class="p-6 flex-1">
            <div class="flex gap-2 mb-4 flex-wrap">
              {project.tags.map(tag => (
                <span class="px-2 py-0.5 bg-purple-500/10 text-purple-400 text-[10px] uppercase font-bold tracking-tighter rounded border border-purple-500/20">
                  {tag}
                </span>
              ))}
            </div>
            
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-purple-400 transition-colors">
              {project.title}
            </h3>
            
            {project.description ? (
              <p class="text-slate-400 text-sm leading-relaxed mb-4">{project.description}</p>
            ) : (
              <div class="space-y-4">
                <div>
                  <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest block mb-1">Problem</span>
                  <p class="text-slate-300 text-sm">{project.problem}</p>
                </div>
                <div>
                  <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest block mb-1">Architecture</span>
                  <p class="text-slate-400 text-xs italic">{project.architecture}</p>
                </div>
                <div class="p-3 bg-emerald-500/5 rounded-lg border border-emerald-500/10">
                  <span class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest block mb-1">Outcome</span>
                  <p class="text-emerald-400/90 text-xs font-medium">{project.outcome}</p>
                </div>
              </div>
            )}
          </div>
          
          {project.link && (
            <div class="p-6 pt-0 mt-auto">
              <a 
                href={project.link} 
                target="_blank" 
                class="flex items-center gap-2 text-cyan-400 hover:text-cyan-300 font-medium text-sm transition-colors"
              >
                View Live Project <ExternalLink size={14} />
              </a>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
