---
import volunteerData from "../data/volunteer.json";
import { Heart } from "lucide-react";
---

<section id="volunteer" class="py-24">
    <div class="container mx-auto px-6">
        <h2 class="section-title">Volunteer & Leadership</h2>

        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            {
                volunteerData.map((item) => (
                    <div class="glass-card p-8">
                        <div class="flex items-center gap-2 text-emerald-400 font-bold text-[10px] uppercase tracking-[0.2em] mb-4">
                            <Heart size={14} />
                            Community Service
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-1">
                            {item.organization}
                        </h3>
                        <p class="text-purple-400 font-semibold mb-2">
                            {item.role}
                        </p>
                        <p class="text-xs text-slate-500 font-bold mb-6">
                            {item.period}
                        </p>

                        <ul class="space-y-3">
                            {item.points.map((point) => (
                                <li class="flex items-start gap-2 text-sm text-slate-400">
                                    <span class="text-emerald-500 mt-1.5">
                                        â€¢
                                    </span>
                                    <span>{point}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </div>
</section>
