---
import speakingData from '../data/speaking.json';
import { Mic, Calendar, MapPin } from 'lucide-react';
---

<section id="speaking" class="py-24 bg-slate-950/30">
  <div class="container mx-auto px-6">
    <h2 class="section-title">Public Speaking & Community</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {speakingData.map(session => (
        <div class="glass-card p-6 flex flex-col">
          <div class="flex items-center gap-2 text-purple-400 font-bold text-[10px] uppercase tracking-widest mb-4">
            <Mic size={14} />
            {session.type}
          </div>
          
          <h3 class="text-xl font-bold text-white mb-3">{session.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed mb-6 flex-1 italic">
            "{session.topic}"
          </p>
          
          <div class="flex flex-col gap-2 mt-auto border-t border-white/5 pt-4">
            <div class="flex items-center gap-2 text-xs text-slate-500">
              <Calendar size={12} />
              {session.date}
            </div>
            <div class="flex items-center gap-2 text-xs text-slate-500">
              <MapPin size={12} />
              {session.location}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
