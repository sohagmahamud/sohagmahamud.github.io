---
import { motion } from "framer-motion";
import {
  Github,
  Linkedin,
  Mail,
  Globe,
  ChevronDown,
  ArrowRight,
} from "lucide-react";
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden py-20"
>
  <div class="absolute inset-0 z-0 opacity-40">
    <img
      src="/images/hero-background.png"
      alt=""
      class="w-full h-full object-cover"
    />
  </div>

  <div class="container relative z-10 px-6 mx-auto text-center">
    <div class="mb-8 flex justify-center">
      <div
        class="relative w-32 h-32 md:w-40 md:h-40 rounded-full p-1 bg-gradient-to-tr from-purple-500 to-cyan-500 shadow-2xl shadow-purple-500/20"
      >
        <img
          src="/images/profile-photo.png"
          alt="Md. Mahamudur Rahman (Sohag Mahamud)"
          class="w-full h-full object-cover rounded-full border-4 border-slate-950"
        />
      </div>
    </div>

    <div class="space-y-6">
      <div>
        <h2
          class="text-lg md:text-xl font-medium text-purple-400 mb-2 tracking-wider"
        >
          Hello, I'm
        </h2>
        <h1 class="text-5xl md:text-8xl font-black mb-6 tracking-tighter">
          <span
            class="bg-gradient-to-r from-white via-slate-100 to-slate-400 bg-clip-text text-transparent"
          >
            Md. Mahamudur Rahman
          </span>
        </h1>
        <p
          class="text-slate-500 font-medium tracking-widest uppercase text-xs mt-2"
        >
          Socially known as <span class="text-purple-400/80">Sohag Mahamud</span
          >
        </p>
      </div>

      <div
        class="text-2xl md:text-4xl font-bold mb-8 text-cyan-400/90 tracking-tight"
      >
        Senior AI Engineer & Agent Architect
      </div>

      <p
        class="max-w-2xl mx-auto text-lg md:text-xl text-slate-400 mb-10 leading-relaxed font-medium"
      >
        Building production-grade autonomous systems and LLM platforms. AWS
        Community Builder with 15+ years of engineering experience.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="#contact"
          class="btn-primary flex items-center justify-center gap-2"
        >
          <Mail size={18} />
          Architect a Solution
        </a>
        <a
          href="#projects"
          class="px-8 py-3 border border-white/20 rounded-full font-bold hover:bg-white/5 transition-all flex items-center justify-center gap-2 group"
        >
          View Agentic Portfolio
          <ArrowRight
            size={18}
            className="group-hover:translate-x-1 transition-transform"
          />
        </a>
      </div>

      <div class="flex gap-8 justify-center">
        {
          [
            {
              icon: Github,
              href: "https://github.com/sohagmahamud",
              label: "GitHub",
            },
            {
              icon: Linkedin,
              href: "https://linkedin.com/in/sohagmahamud",
              label: "LinkedIn",
            },
            { icon: Mail, href: "mailto:opensohag@gmail.com", label: "Email" },
            { icon: Globe, href: "https://cloudninjabd.com", label: "Website" },
          ].map((social) => (
            <a
              href={social.href}
              target="_blank"
              class="text-slate-500 hover:text-purple-400 transition-all hover:scale-125"
              aria-label={social.label}
            >
              <social.icon size={26} />
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <div
    class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce flex flex-col items-center gap-2"
  >
    <span
      class="text-[10px] font-bold text-slate-600 uppercase tracking-[0.3em] pb-2"
      >Discover</span
    >
    <ChevronDown size={24} className="text-slate-700" />
  </div>
</section>

<script>
  // Simple entrance animation logic since we are using static Astro
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("opacity-100", "translate-y-0");
        entry.target.classList.remove("opacity-0", "translate-y-10");
      }
    });
  });

  document.querySelectorAll("section").forEach((section) => {
    section.classList.add(
      "transition-all",
      "duration-1000",
      "opacity-0",
      "translate-y-10",
    );
    observer.observe(section);
  });
</script>
