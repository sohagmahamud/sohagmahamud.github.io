---
import educationData from "../data/education.json";
import { GraduationCap, School, Book, BookOpen } from "lucide-react";

const icons = { GraduationCap, School, Book, BookOpen };
---

<section id="education" class="py-24 bg-slate-950/50">
    <div class="container mx-auto px-6">
        <h2 class="section-title">Academic Background</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
            {
                educationData.map((item) => {
                    const Icon = (icons as any)[item.icon] || icons.Book;
                    return (
                        <div class="glass-card p-6 flex flex-col items-center text-center group">
                            <div class="p-4 bg-purple-500/10 rounded-full mb-6 group-hover:bg-purple-500/20 transition-colors">
                                <Icon className="w-8 h-8 text-purple-400" />
                            </div>
                            <h3 class="text-xl font-bold text-white mb-2">
                                {item.school}
                            </h3>
                            <p class="text-sm text-slate-300 mb-4">
                                {item.degree}
                            </p>
                            <div class="mt-auto space-y-1">
                                <span class="block text-xs font-bold text-slate-500 uppercase tracking-widest">
                                    {item.year}
                                </span>
                                <span class="block text-sm text-cyan-400 font-medium">
                                    {item.gpa}
                                </span>
                            </div>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
