---
import awardsData from "../data/awards.json";
import { Trophy, Award, Globe, Medal } from "lucide-react";

const icons = { Trophy, Award, Globe, Medal };
---

<section id="awards" class="py-24 bg-slate-950/50">
    <div class="container mx-auto px-6">
        <h2 class="section-title">Honors & Recognition</h2>

        <div class="max-w-4xl mx-auto">
            {
                awardsData.map((award, index) => {
                    const Icon = (icons as any)[award.icon] || icons.Award;
                    return (
                        <div class="flex gap-6 mb-8 group">
                            <div class="hidden md:flex flex-col items-center">
                                <div class="w-12 h-12 rounded-full bg-purple-500/10 flex items-center justify-center border border-purple-500/20 group-hover:bg-purple-500/20 transition-colors">
                                    <Icon
                                        size={24}
                                        className="text-purple-400"
                                    />
                                </div>
                                {index !== awardsData.length - 1 && (
                                    <div class="w-px h-full bg-white/10 mt-2" />
                                )}
                            </div>
                            <div class="glass-card flex-1 p-6 group-hover:scale-[1.01]">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="text-xl font-bold text-white">
                                        {award.title}
                                    </h3>
                                    <span class="px-3 py-1 bg-white/5 rounded-full text-xs font-bold text-slate-400">
                                        {award.year}
                                    </span>
                                </div>
                                <p class="text-slate-400 text-sm leading-relaxed">
                                    {award.description}
                                </p>
                            </div>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
