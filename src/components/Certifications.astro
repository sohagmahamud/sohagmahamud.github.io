---
import certsData from "../data/certifications.json";
import * as Icons from "lucide-react";

const icons = Icons;
---

<section id="certifications" class="py-24">
    <div class="container mx-auto px-6">
        <h2 class="section-title">Professional Certifications</h2>

        <div
            class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-7xl mx-auto"
        >
            {
                certsData.map((cert) => {
                    const Icon = (icons as any)[cert.icon] || icons.Award;
                    return (
                        <div class="glass-card p-4 flex gap-4 items-center group hover:bg-white/10 h-full">
                            <div class="p-2 bg-purple-500/10 rounded-lg shrink-0">
                                <Icon className="w-6 h-6 text-purple-400" />
                            </div>
                            <div class="flex-1 min-w-0">
                                <h3 class="text-xs md:text-sm font-bold text-white leading-snug group-hover:text-purple-300 transition-colors break-words">
                                    {cert.name}
                                </h3>
                                <p class="text-[9px] md:text-[10px] text-slate-500 uppercase tracking-widest mt-1 font-semibold truncate">
                                    {cert.issuer}
                                </p>
                            </div>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
